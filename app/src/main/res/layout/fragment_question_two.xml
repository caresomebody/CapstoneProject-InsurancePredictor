<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuestionTwoFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/rubik_medium"
        android:textSize="28sp"
        android:textColor="@color/font"
        android:text="@string/questionnaire_2_bmi"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/rubik_light"
        android:textSize="14sp"
        android:textColor="@color/font"
        android:text="@string/how_tall_are_you"
        />

    <EditText
        android:id="@+id/input_height"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/primary_rounded"
        android:hint="@string/input_height"
        android:paddingStart="16dp"
        android:textColorHint="@color/grey"
        android:fontFamily="@font/rubik_regular"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/rubik_light"
        android:textSize="14sp"
        android:textColor="@color/font"
        android:text="@string/_2_what_is_your_weight"
        />

    <EditText
        android:id="@+id/input_weight"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/primary_rounded"
        android:hint="Input your weight"
        android:paddingStart="16dp"
        android:textColorHint="@color/grey"
        android:fontFamily="@font/rubik_regular"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/btn_question_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="@string/next"
        android:fontFamily="@font/rubik_regular"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        />

</LinearLayout>