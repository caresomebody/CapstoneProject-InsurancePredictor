<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:orientation="vertical"
        android:background="@color/background"
        tools:context=".ResultActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/success"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prediction_success"
            android:fontFamily="@font/rubik_medium"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@color/font"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:fontFamily="@font/rubik_regular"
                android:textSize="20sp"
                android:textColor="@color/font"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/colon"
                android:fontFamily="@font/rubik_regular"
                android:textSize="20sp"
                android:textColor="@color/font"
                android:layout_marginStart="16dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/name_result"
                android:fontFamily="@font/rubik_regular"
                android:textSize="20sp"
                android:textColor="@color/font"
                android:gravity="right"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/age"
                android:fontFamily="@font/rubik_regular"
                android:textSize="20sp"
                android:textColor="@color/font"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/colon"
                android:fontFamily="@font/rubik_regular"
                android:textSize="20sp"
                android:textColor="@color/font"
                android:layout_marginStart="16dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="21"
                android:fontFamily="@font/rubik_regular"
                android:textSize="20sp"
                android:textColor="@color/font"
                android:gravity="right"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sex"
                android:fontFamily="@font/rubik_regular"
                android:textSize="20sp"
                android:textColor="@color/font"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/colon"
                android:fontFamily="@font/rubik_regular"
                android:textSize="20sp"
                android:textColor="@color/font"
                android:layout_marginStart="16dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/sex_result"
                android:fontFamily="@font/rubik_regular"
                android:textSize="20sp"
                android:textColor="@color/font"
                android:gravity="right"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/body_mass_index"
                android:fontFamily="@font/rubik_regular"
                android:textSize="20sp"
                android:textColor="@color/font"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/colon"
                android:fontFamily="@font/rubik_regular"
                android:textSize="20sp"
                android:textColor="@color/font"
                android:layout_marginStart="16dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/bmi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/bmi_result"
                android:fontFamily="@font/rubik_regular"
                android:textSize="20sp"
                android:textColor="@color/font"
                android:gravity="right"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/smoking"
                android:fontFamily="@font/rubik_regular"
                android:textSize="20sp"
                android:textColor="@color/font"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/colon"
                android:fontFamily="@font/rubik_regular"
                android:textSize="20sp"
                android:textColor="@color/font"
                android:layout_marginStart="16dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/smoking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/smoking_result"
                android:fontFamily="@font/rubik_regular"
                android:textSize="20sp"
                android:textColor="@color/font"
                android:gravity="right"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/children"
                android:fontFamily="@font/rubik_regular"
                android:textSize="20sp"
                android:textColor="@color/font"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/colon"
                android:fontFamily="@font/rubik_regular"
                android:textSize="20sp"
                android:textColor="@color/font"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/children"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/children_result"
                android:fontFamily="@font/rubik_regular"
                android:textSize="20sp"
                android:textColor="@color/font"
                android:gravity="right"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:fontFamily="@font/rubik_regular"
                android:textSize="20sp"
                android:textColor="@color/font"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/colon"
                android:fontFamily="@font/rubik_regular"
                android:textSize="20sp"
                android:textColor="@color/font"
                android:layout_marginStart="16dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/northwest_result"
                android:fontFamily="@font/rubik_regular"
                android:textSize="20sp"
                android:textColor="@color/font"
                android:gravity="right"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/charge_prediction"
            android:fontFamily="@font/rubik_regular"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/font"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/charge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/charge_result"
            android:fontFamily="@font/rubik_medium"
            android:textSize="35sp"
            android:gravity="center"
            android:textColor="@color/font"
            android:layout_marginBottom="16dp"
            />

        <Button
            android:id="@+id/button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="@string/what_s_next"
            android:fontFamily="@font/rubik_regular"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            />

        <Button
            android:id="@+id/button_back_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="@string/back_to_dashboard"
            android:fontFamily="@font/rubik_regular"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            />

    </LinearLayout>

</ScrollView>
