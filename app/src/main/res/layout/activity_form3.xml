<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".form.Form3Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/rubik_medium"
        android:textSize="28sp"
        android:textColor="@color/font"
        android:text="@string/questionnaire_3_bmi"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/rubik_light"
        android:textSize="14sp"
        android:textColor="@color/font"
        android:text="@string/how_tall_are_you"
        />

    <EditText
        android:id="@+id/input_height"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/primary_rounded"
        android:hint="@string/input_height"
        android:inputType="number"
        android:paddingStart="16dp"
        android:textColorHint="@color/grey"
        android:fontFamily="@font/rubik_regular"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/rubik_light"
        android:textSize="14sp"
        android:textColor="@color/font"
        android:text="@string/_2_what_is_your_weight"
        />

    <EditText
        android:id="@+id/input_weight"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/primary_rounded"
        android:hint="@string/input_your_weight"
        android:inputType="number"
        android:paddingStart="16dp"
        android:textColorHint="@color/grey"
        android:fontFamily="@font/rubik_regular"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        tools:ignore="RtlSymmetry" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/rubik_regular"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/next"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/rubik_regular"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/back"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>